{
  "name": "format-forge-mcp",
  "version": "1.0.0",
  "description": "A multi-format data converter MCP for CSV, Excel, JSON, XML, and Markdown",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "package": "npm run build && npm pack",
    "dist": "npm run build && cp manifest.json dist/",
    "test:integration": "jest --testPathPattern=integration",
    "test:coverage": "jest --coverage"
  },
  "keywords": ["mcp", "format", "converter", "csv", "excel", "json", "xml", "markdown"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "papaparse": "^5.4.1",
    "exceljs": "^4.4.0",
    "xml2js": "^0.6.2",
    "marked": "^12.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/jest": "^29.5.0",
    "@types/papaparse": "^5.3.14",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  }
}